#grid 
    %table
        %tr.row
            %th 
                = link_to "Column 1", move_path(col: 1, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true 

            %th 
                = link_to "Column 2", move_path(col: 2, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true
            %th 
                = link_to "Column 3", move_path(col: 3, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true                        
            %th 
                = link_to "Column 4", move_path(col: 4, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true                        
            %th 
                = link_to "Column 5", move_path(col: 5, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true                        
            %th 
                = link_to "Column 6", move_path(col: 6, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true                        
            %th 
                = link_to "Column 7", move_path(col: 7, id: board.id, game_id: game.id), class: 'button', method: :post, remote: true  
            
        
        - grid.each do |row|
            %tr.row
                - row.each do |cell|
                    %td{class: "#{cell.value}", id: "cell"}
                %td#row= row.first.y + 1