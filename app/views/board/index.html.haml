%fieldset#game_board.game_board
    = form_for "connect_four", url: '/board', method: :post do |f| 
        /= hidden_field_tag :game_id, game.id
        .X= f.label "Player 1 (Yellow)"
        = text_field_tag :player1
        %br
        %br
        .O= f.label "Player 2 (Red)"
        = text_field_tag :player2
        %p
            = f.submit value: "Start Game", class: "btn"
        %br

