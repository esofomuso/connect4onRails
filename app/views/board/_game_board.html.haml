%table
    %thead
        %tr
            %th#reset_button= link_to "Restart Game", move_path(reset_game: true, id: board.id, game_id: game.id), class: 'btn', method: :post, remote: true 
    
= form_for :board, url: '/play', remote: true, method: :post do |f|
    #notice.notice 
    %br 
    %h1 Connect4 on Rails 
    
    %span.X
        %label Yellow Player : 
        =image_tag "/assets/yellow.png", style: "max-width: 20px"
        %span#yellow_player= game.yellow_player rescue "X"
    %br 
    %span.O
        %label Red Player : 
        =image_tag "/assets/red2.jpeg", style: "max-width: 20px"
        %span#red_player= game.red_player rescue "O"
    %br 
    %br
    #grid
        = render "grid"
    %br 
    %br
    #message.notice
        = game.solicit_move rescue "Please make a move"
